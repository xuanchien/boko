<div>
		<div class="round-border three columns centered">
			<h2>Đăng nhập</h2>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div>
			    <%= f.label :login, "Email hoặc Username" %>
			     <%= f.text_field :login, :autofocus => true, :placeholder => "Email hoặc Username" %>
			  </div>
			  
			  <div>
			    <%= f.label :password %>
			     <%= f.password_field :password, :placeholder => t("password") %>
			   </div>

			  <% if devise_mapping.rememberable? -%>
			  <div>
			    <label>
			    	<%= f.check_box :remember_me %>
			    	<%= t("remember_me") %>
			    </label>
			  </div>
			  <% end -%>
        <br />
			  <div><%= f.submit t("sign_in"), :class => "button success" %></div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
</div>

