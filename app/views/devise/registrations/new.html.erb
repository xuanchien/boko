<h2>Đăng ký tài khoản mới</h2>
<div class="large-5 columns centered">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
  </div>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, :placeholder => "Username" %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, :placeholder => "Mật khẩu" %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :placeholder => "Xác nhận mật khẩu" %>
  </div>

  <div><%= f.submit t("sign_up"), :class => "button success radius" %></div>
<% end %>
<%= link_to "Đã có tài khoản rồi? Hãy đăng nhập", new_user_session_path %>
</div>